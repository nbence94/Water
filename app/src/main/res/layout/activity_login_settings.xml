<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginSettingsActivity"
    android:background="@drawable/bg_new">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:layout_gravity="left"
            android:textSize="25sp"
            android:layout_marginBottom="40dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Csatalakozási paraméterek" />


        <EditText
            android:id="@+id/login_settings_ip_gui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adatbázis IP címe"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/login_settings_port_gui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adatbázis portja"
            android:textSize="20sp"
            android:layout_marginBottom="25dp"/>

        <EditText
            android:id="@+id/login_settings_user_gui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Felhasználónév"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/login_settings_password_gui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jelszó"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_settings_save_gui"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/save_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>